#!/bin/bash
# ADD -vx after bash to echo expanded script

# save, clear screen
echo -e "\e[?1049h"
clear

# example "application" follows...

#figlet WELCOME

RED='\033[0;31m'
CYAN='\033[1;36m'
NC='\033[0m'

figlet "BizNet"

echo -e " ** ${CYAN}BizNet Setup Script${NC} **\n"

echo "1) Option 1..."
echo "2) Option 2..."
echo "3) Option 3..."

echo -e "\nMake a Selection\n"

read $input

# example "application" ends here

# restore

echo -e "\e[?1049l"

exit 0
